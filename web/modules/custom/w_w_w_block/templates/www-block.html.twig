<div id="where-we-work-map">
    <div id="www-map-container">Where We Work Map</div>
    <div class="description">Click any location marker for project details</div>
</div>

<div id="www-continents">
    {% for row in data %}
        <div class="continent-row">

            <div class="col-one">
                <img src="{{ file_url(row['term']['image']) }}" alt="" />
            </div>

            <div class="col-two">
                <div class="sub-title">Locations</div>
                <h2>{{ row['term']['name'] }}</h2>

                <div class="countries">
                    <ul>
                        {% for country in row['nodes'] %}
                            <li>{{ country['link'] }}</li>
                        {% endfor %}
                    </ul>
                </div>

            </div>

        </div>
    {% endfor %}
</div>
